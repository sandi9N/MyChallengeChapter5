<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreenActivity">

    <ImageView
        android:id="@+id/ivsc1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/splash_screen1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/splash_screen2"
        app:layout_constraintEnd_toEndOf="@id/ivsc1"
        app:layout_constraintStart_toStartOf="@+id/ivsc1"
        app:layout_constraintTop_toBottomOf="@+id/ivsc1" />

</androidx.constraintlayout.widget.ConstraintLayout>